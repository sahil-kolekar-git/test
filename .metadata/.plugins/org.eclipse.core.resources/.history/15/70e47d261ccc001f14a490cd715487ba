package com.ty.practise;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import jakarta.servlet.http.Cookie;
import jakarta.servlet.http.HttpServletResponse;

import org.springframework.web.bind.annotation.CookieValue;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

@RestController
@RequestMapping("/api")
public class ReadController {
	@GetMapping("/cookie")
	public String getCookie(@CookieValue(value = "sname") String name, @CookieValue(value = "semail") String email) {
		return name + " " + email;
	}

	@PostMapping("/create")
	public String createCookie(HttpServletResponse resp) {

		Cookie cookie = new Cookie("phone", "8423443212");
		resp.addCookie(cookie);
		return "Cookie created";
	}

}
